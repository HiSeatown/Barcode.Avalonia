<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:QRCoder_Avalonia.ViewModels"
		xmlns:controls="using:QRCoder_Avalonia.Views.Controls"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="QRCoder_Avalonia.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
		Icon="/Assets/avalonia-logo.ico"
		Title="QRCoder_Avalonia"
		RequestedThemeVariant="Light">

	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
		to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid ColumnDefinitions="2*,Auto" RowDefinitions="*">
		<!-- Left: canvas area -->
		<Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
			<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
				<controls:BarcodeCanvas BarcodeMatrix="{Binding BarcodeMatrix}"/>
			</ScrollViewer>
		</Border>

		<!-- Right: controls -->
		<StackPanel Grid.Column="1" Width="220" Margin="10" Spacing="6">
			<TextBlock Text="Input for barcode:"/>
			<TextBox Text="{Binding InputText, Mode=TwoWay}"/>
			<Button Content="Genearte" Command="{Binding GenerateCommand}"/>
		</StackPanel>
	</Grid>

</Window>